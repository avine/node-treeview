{
  "name": "node-treeview",
  "version": "1.1.0",
  "description": "Asynchronous filesystem tree view for node",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "lint": "tslint -p ./tsconfig.json",
    "clean": "shx rm -rf ./dist ./coverage",
    "build": "tsc",
    "test": "istanbul cover ./node_modules/jasmine/bin/jasmine.js",
    "all": "npm run clean && npm run build && npm test",
    "dist:prepare": "shx cp ./package.json ./LICENSE ./README.md ./dist/src",
    "dist:publish": "npm publish ./dist/src",
    "dist": "npm run dist:prepare && npm run dist:publish"
  },
  "bin": {
    "node-treeview": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avine/node-treeview.git"
  },
  "keywords": [
    "treeview",
    "filesystem",
    "json",
    "typescript",
    "node",
    "asynchronous"
  ],
  "author": "St√©phane Francel <contact@avine.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/avine/node-treeview/issues"
  },
  "homepage": "https://github.com/avine/node-treeview#readme",
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^9.4.7",
    "@types/yargs": "^11.0.0",
    "istanbul": "^0.4.5",
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "shx": "^0.2.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "minimatch": "^3.0.4",
    "yargs": "^11.0.0"
  }
}
